
@{
    ViewBag.Title =Resources.General.Login;
}

@using (Html.BeginForm(actionName:"Login",controllerName:"Account"))
{
    <div class="form-horizontal">
        <h4>@Resources.General.Login</h4>
        <hr />
        <div class="card">
            <div class="card-header">
                @Resources.General.Login
            </div>
            <div class="card-body">
                <h5 class="card-title"><label style="color:red">لطفا قبل از سفارش وارد سایت شوید</label></h5>
                <div class="form-group">
                    <label class="control-label col-md-2">@Resources.General.UserName</label>
                    <div class="col-md-10">
                        <input name="username" id="username" class="form-control " />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">@Resources.General.Password</label>
                    <div class="col-md-10">
                        <input name="password" id="password" class="form-control " type="password" /><span style="color:red">@ViewBag.MessageCheck</span>
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-2" for="Remember">@Resources.General.Remember</label>

                    <div class="col-sm-10">
                        <div class="checkbox">
                            <input type="checkbox" name="Remember" checked="checked" id="Remember" value="Remember" class="" />
                        </div>
                    </div>
                </div>


                <input type="submit" value="ورود" class="btn btn-primary " />


            </div>

        </div>
        @Html.ActionLink("ایجاد کاربر", MVC.Users.Create())
       
    </div>
}
<div>
 
    @Html.ActionLink("برگشت به صفحه سفارش", MVC.Order.OrederCustomer())
</div>
